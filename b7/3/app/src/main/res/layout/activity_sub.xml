<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <!-- EditText để hiển thị số A -->
    <EditText
        android:id="@+id/edtAA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Số A"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:padding="12dp" />

    <!-- EditText để hiển thị số B -->
    <EditText
        android:id="@+id/edtBB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Số B"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edtAA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Button Gửi Tổng (trái) -->
    <Button
        android:id="@+id/btnsendtong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gửi Tổng"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edtBB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnsendhieu"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp" />

    <!-- Button Gửi Hiệu (phải) -->
    <Button
        android:id="@+id/btnsendhieu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gửi Hiệu"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edtBB"
        app:layout_constraintStart_toEndOf="@id/btnsendtong"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
